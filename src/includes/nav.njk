<nav
  {% if notHome %}
    class="nav-portfolio-hold transition"
  {% endif %}
  >
  <ul class="
    {% if isHome %}
       grid grid--xs-1-1 grid--sm-1-2 grid--gutter-md mg-t-2 nav-portfolio
    {% else %}
       flex flex--horizontal-center nav-portfolio nav-portfolio--row
    {% endif %}
  ">
    {%- for item in collections.portfolio -%}
      {%- set itemUrl = (item.url == page.url) -%}
        {% if item.title != 'Home' %}
          <li class="nav-portfolio__item pd-x-1">
            <a href="{{ item.url | url }}" class="nav-portfolio__link {% if itemUrl %}nav-portfolio__link--active{% endif %}">
              {% if isHome %}
                <div class="transition transition--fall transition--fadein">
                  <div class="js-media-hold nav-portfolio__media shadow aspect aspect--square"
                    data-video="{{item.data.videoSmall}}"
                    data-img="{{ item.data.image }}"
                    data-title="{{ item.data.title }}"
                    data-id="{{item.data.title|replace(' ', '-', 'g') }}"
                    {% if item.data.title == 'Twitch.tv' %}
                    style="background: black"
                    {% endif %}
                  >
                  </div>
                </div>
              {% endif %}

              <h2 class="nav-portfolio__hdr nav-portfolio__hide">{{item.data.title}}</h2>
              <p class="nav-portfolio__deck nav-portfolio__hide">{{item.data.deck |replace(', ', '<br/> ') | safe}}</p>
            </a>
          </li>
        {% endif %}
      {% endfor %}
  </ul>
</nav>
