---
layout: base
---

<div class="js-media-hold media-hold aspect
  {% if title != 'Twitch.tv' and title != 'Adobe Frame.io' %}
    aspect--square
  {% endif %}
  shadow shadow--lg mb-2"
  data-video="{{ video }}"
  data-img="{{ image }}"
  data-title="{{ title }}"
  data-id="{{ title|replace(' ', '-', 'g') }}"
></div>

<h2>{{ title }}</h2>

{% if deck %}
  <h3>{{ deck|replace('<br>', ', ', 'g') }}</h3>
{% endif %}

{% if website %}
  <h4>
    <a href="{{website}}" class="no-smoothstate" target="_blank">
      {{website|replace('https://', '') }}
    </a>
  </h4>
{% endif %}

{{ content | safe }}

{% if gallery %}
  <hr>
  {% for item in gallery %}
    {% if '.mp4' in item %}
      <div class="js-media-hold media-hold bd-rad shadow shadow--lg mb-2" data-video="{{ item }}" data-img="{{ item | replace('.mp4', '.png') }}" data-title="{{ item | replace('/static/media/vid-', '') | replace('-1280x1280.mp4', '') }}" data-id="{{ item | replace('/static/media/vid-', '') | replace('-1280x1280.mp4', '') }}"></div>
    {% else %}
      <div class="media-hold is-visible shadow shadow--lg mb-2">
        <img src="{{ item }}">
      </div>
    {% endif %}
  {% endfor %}
{% endif %}