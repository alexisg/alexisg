---
layout: base
---

<div class="js-media-hold aspect
  {% if title != 'Twitch.tv' and title != 'Frame.io' %}
    aspect--square
  {% endif %}
  bd-rad shadow shadow--lg mg-y-2"
  data-video="{{ video }}"
  data-img="{{ image }}"
  data-title="{{ title }}"
  data-id="{{ title|replace(' ', '-', 'g') }}"
></div>

<h2>{{ title }}</h2>

{% if deck %}
  <h4>{{ deck|replace('<br>', ', ', 'g') }}</h4>
{% endif %}

{% if website %}
  <h5>
    <a href="{{website}}" class="no-smoothstate" target="_blank">
      {{website|replace('https://', '') }}
    </a>
  </h5>
{% endif %}

<hr>

{{ content | safe }}

{% if gallery %}
  <hr>
  {% for item in gallery %}
    {% if '.mp4' in item %}
      <div class="js-media-hold aspect bd-rad shadow mg-y-2" data-video="{{ item }}" data-img="{{ item | replace('.mp4', '.png') }}" data-title="{{ item | replace('/static/media/vid-', '') | replace('-1280x1280.mp4', '') }}" data-id="{{ item | replace('/static/media/vid-', '') | replace('-1280x1280.mp4', '') }}"></div>
    {% else %}
      <div class="bd-rad shadow shadow--lg mg-y-2">
        <img src="{{ item }}">
      </div>
    {% endif %}
  {% endfor %}
{% endif %}
