{%- set notHome = (page.url != '/') -%}
{%- set isHome = (page.url == '/') -%}

<!DOCTYPE html>
<html>
  <head>
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-63995003-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-63995003-1');
    </script>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>{% block title %}{% endblock %}</title>
    <meta name="description" content="{% block description %}{{ site_description|default(' =^.^= ') }}{% endblock %}">
    <meta name="viewport" content="width=device-width">

    <link rel="icon" href="/static/images/favicon.png" />
    <link rel="apple-touch-icon" href="/static/images/apple-touch-icon.png"/>    
    <link rel="stylesheet" href="/static/css/alexis.css"/>

    <script src="//cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js"></script>
    {% block head_extra %}{% endblock %}
  </head>


  <body>

    <!-- SVG Use sprite -->
    {% include "sprite.svg" %}

    <div id="js-main" data-page="home">
      <div class="container">
        
        {% include "header.njk" %}
        
        {% block intro %}{% endblock %}
        
        {% include "nav.njk" %}

        <article class="transition transition--fadein">
          {{ content | safe }}
        </article>

        {% include "footer.njk" %}

      </div>
    </div>

    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
    <script src="/static/js/jquery.smoothState.js"></script>
    <script src="/static/js/main.js"></script>
    
    {% block js_extra %}{% endblock %}

    <!-- =^.^= -->

  </body>
</html>
